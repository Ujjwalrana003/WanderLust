<% layout("/layout/boilerplate") %>
<body style="background-color: #CADCFC;">


    <div class="container" style="width: 50%; margin-top: 20px;margin-bottom:30px; background-color: #89ABE3; padding: 10px 20px 10px 20px;">
        <form method="POST" action="/edit/<%= data._id %>">
              <div class="mb-3">
                <label for="title" class="form-label"><b>Title:</b> </label>
                <input type="text" style="border: 2px solid black;" class="form-control" id="title" value="<%= data.title %>" name="title">
              </div>
              <div class="mb-3">
                <label for="description" class="form-label"><b>Description:</b> </label>
                <input type="text" style="border: 2px solid black;" class="form-control" id="description" value="<%=data.description  %>" name="description">
              </div>
              <div class="row mb-3">
                <label for="imageurl" class="col-sm-2 col-form-label"><b>IMAGE URL:</b> </label>
                <div class="col-sm-10">
                  <input type="text" style="border: 2px solid black;" class="form-control" id="imageurl" value="<%= data.image %>" name="image">
                </div>
              </div>
              <div class="row">
                <div class="col">
                    <label for="price" class="col-sm-2 col-form-label"><b>Price:</b> </label>
                    <input type="number" style="border: 2px solid black;" class="form-control" id="price" value="<%= data.price %>" aria-label="First name" name="price">
                </div>
                <div class="col" >
                    <label for="location" class="col-sm-2 col-form-label"><b>Location:</b> </label>
                    <input type="text" style="border: 2px solid black;" class="form-control" id="location" value="<%= data.location %>" aria-label="Last name" name="location" >
                </div>
              </div>
              <div class="mb-3">
                <label for="country" class="form-label"><b>Country:</b> </label>
                <input type="text" style="border: 2px solid black;" class="form-control" id="country" value="<%= data.country %>" name="country">
              </div>
              
        
            <button class="btn" style="background-color:white;color:black; width: 50%; margin-left: 24%; margin-top: 30px; margin-bottom: 20px; font-size: larger;">Submit</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


  